# for_window [class=""] move container to workspace number 28: P-8
# for_window [class=""] move container to workspace number 29: P-9

# Go to workspace O-1
exec --no-startup-id i3-msg 'workspace number 11: O-1'

# Setup redshift
exec --no-startup-id redshift -c ~/.config/redshift/redshift.conf &

# Start picom
exec --no-startup-id picom -b

# Start dunst
exec --no-startup-id dunst --config=~/.config/dunst/dunstrc &

# Start sxhkd
exec_always --no-startup-id ~/.config/sxhkd/launch.sh mode navigate &

# Start polybar
exec_always --no-startup-id ~/.config/polybar/launch.sh &
